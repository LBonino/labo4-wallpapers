@model Wallpapers.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = "_Layout";
}

<style>
.content {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;

}
.form-container {
    display: flex;
    align-items: center;
    width: 25%;
    height: 70%;
    background-color: #1a1a1a;
}

form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 80%;
}

form input {
    background-color: #303030;
    border-radius: 2px;
    height: 30px;
    width: 70%;
    padding: 8px;
            font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.55);
    border: none;
}

form input:focus {
    outline: none;
    filter: brightness(120%);
}


form input::placeholder {
    color: rgba(255, 255, 255, 0.55);
}

form button {
    width: 75%;
    padding: 9px 8px;
    border-radius: 2px;
    font-weight: 400;
    font-family: "Montserrat";
    background-image: radial-gradient(100% 100% at 0 bottom,#31751d 0,#a1c25a 100%);
    border: none;
    transition: .25s ease-in;
            font-size: 1.3rem;
}

form button:hover {
    cursor: pointer;
    filter: brightness(120%);
    transition: .25s ease-in;
}

h2 {
    font-family: "Montserrat"
}
</style>

<div class="content">
    <h2>Regístrate</h2>
    <div class="form-container">
        <form asp-controller="Register" asp-action="Index" method="post">
            <input asp-for="Username" placeholder="Nombre de usuario"/>
            <span asp-validation-for="Username"></span>

            <input asp-for="Email" placeholder="Email"/>
            <span asp-validation-for="Email"></span>

            <input asp-for="Password" placeholder="Contraseña"/>
            <span asp-validation-for="Password"></span>

            <input asp-for="PasswordConfirmation" placeholder="Confirmar contraseña"/>
            <span asp-validation-for="PasswordConfirmation"></span>

            <button type="submit">Registrarse</button>
        </form>
    </div>
</div>