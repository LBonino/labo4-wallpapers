@model Wallpapers.ViewModels.UploadViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_Layout";
}

<style>
.content {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

h2 {
    font-family: "Montserrat"
}

.form-container {
    display: flex;
    align-items: center;
    width: 25%;
    height: 50%;
    background-color: #1a1a1a;
}

form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 65%;
}

form input[type="text"] {
    background-color: #303030;
    border-radius: 2px;
    height: 30px;
    width: 70%;
    padding: 8px;
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.55);
    border: none;
}

form input[type="file"] {
    display: none;
}

form input:focus {
    outline: none;
    filter: brightness(120%);
}


form input::placeholder {
    color: rgba(255, 255, 255, 0.55);
}

form button {
    width: 75%;
    padding: 9px 8px;
    border-radius: 2px;
    font-weight: 400;
    font-family: "Montserrat";
    background-image: radial-gradient(100% 100% at 0 bottom,#31751d 0,#a1c25a 100%);
    border: none;
    transition: .25s ease-in;
    font-size: 1.3rem;
}

form button:hover {
    cursor: pointer;
    filter: brightness(120%);
    transition: .25s ease-in;
}

.input-label {
    width: 75%;
    padding: 9px 0;
    border-radius: 2px;
    font-weight: 400;
    font-family: "Montserrat";
    background-image: radial-gradient(100% 100% at 0 bottom,#e2702e 0,#e48e3d 100%);
    border: none;
    transition: .25s ease-in;
    font-size: 1.3rem;
    display: flex;
    justify-content: center;
    color: black;
    align-items: center;
}

.input-label:hover {
    cursor: pointer;
    filter: brightness(115%);
    transition: .25s ease-in;
}

.group {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

button[type="submit"] {
    margin-top: 13px;
}
</style>

<div class="content">
    <h2>Sube un wallpaper</h2>
    <div class="form-container">
        <form enctype="multipart/form-data" asp-controller="Upload" asp-action="Index" method="post">
            <div class="group">
                <span asp-validation-for="File"></span>
                <label class="input-label" asp-for="File">
                    <input asp-for="File" placeholder="Nombre de usuario" type="file" accept="image/png, image/jpeg" />
                    Seleccionar archivo
                </label>
                <span id="filename"></span>
            </div>

            <span asp-validation-for="TagName"></span>
            <input asp-for="TagName" placeholder="Tag" />

            <button type="submit">Subir wallpaper</button>
        </form>
    </div>
</div>

<script>
    const filenameSpan = document.querySelector("#filename");
    const fileInput = document.querySelector('input[type="file"]');

    fileInput.addEventListener("change", () => {
        filenameSpan.textContent = fileInput.files[0].name;
    });
</script>